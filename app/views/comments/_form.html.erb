<h2>Add a comment:</h2>
<%= form_for([@post, @post.comments.build]) do |f| %>
    <p>
        <%= f.label :body %><br>
        <%= f.text_area :body, :placeholder => "New Comment", :class => "form-control", :rows => "3" %>
    </p>

    <p>
        <%= f.submit "Comment", :class=>"btn btn-primary" %>
    </p>
<% end %>
