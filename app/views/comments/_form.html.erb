<%= form_for([@post, @post.comments.build]) do |f| %>
    <div class="form-group">
        <p>
            <%= f.label :body %><br>
            <%= f.text_area :body, :placeholder => "New Comment", :class => "form-control", :rows => "3" %>
        </p>

        <p>
            <% if current_user %>
                <%= f.submit "Comment", :class => "btn btn-primary" %>
            <% else %>
                <h3><%= link_to "Submit", new_user_session_path, :class => "btn btn-primary" %></h3>
            <% end %>
        </p>
    </div>
<% end %>
