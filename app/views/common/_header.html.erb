<!--Header Part-->

<header>
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="mlogo">
                <image src="../images/logo.png" width="200px" height="50"></image>
            </div>
            <button type="button" class="navbar-toggle" data-toggle="collapse"
                    data-target="#bs-example-navbar-collapse-1">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="/">Home</a></li>
                    <li><a href="/#/posts">Blog</a></li>
                    <li><a href="/#/about">About</a></li>
                     <li><a href="/portfolios">About</a></li>
                    <li><a href="/#/contact">Contact</a></li>

                    <% if user_signed_in? %>
                        <li>  <%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link' %> </li>
                        <li>  <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link' %></li>
                        <li> Hello <strong><%= current_user.email %></strong>.</li>
                    <% else %>
                        <li><a href="#" data-toggle="modal" data-target="#myModal">Login/Signup
                            <up></up>
                        </a>
                        </li>
                    <% end %>

                </ul>
            </div>
        </div>
    </nav>
</header>

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content" style="padding-bottom:20px;">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h3 class="modal-title" id="myModalLabel">Login or Sign-Up</h3>
            </div>

            <div class="modal-body">


                <div class="login_margin1">
                    <p><b>Sign-in Now! for Emangu</b>,</p>
                </div>

                <div class="login_margin_socialmedia">
                    <p>
                        <button class="btn-facebook"><i class="fa fa-facebook"></i> | Facebook</button>
                        <button class="btn-twitter"><i class="fa fa-twitter"></i> | Twitter</button>
                        <button class="btn-google-plus"><i class="fa fa-google-plus"></i> | Google +</button>
                        <br></p>
                </div>

                <div class="login_margin2">
                    it's free and always will be..</p>

                </div>

                <div id="form_login">
                    <%= form_for(:user, :url => session_path(:user)) do |f| %>
                        <div class="row">
                            <div class="col-md-2"></div>
                            <div class="form-group col-md-8">
                                <%= f.email_field :email, autofocus: true, :class => "form-control", :required => true, :placeholder => "Enter Email-id" %>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-2"></div>
                            <div class="form-group col-md-8">
                                <%= f.password_field :password, autocomplete: "off", :class => "form-control", :required => true, :placeholder => "Enter Your Password" %>
                            </div>
                        </div>
                        <div class="row form_margin">
                            <div class="form-group col-md-9">
                                <%= f.check_box :remember_me %>
                                <%= f.label :remember_me %>
                                <label>&nbsp;&nbsp;&nbsp;</label>
                                <%= link_to "Forgot your password?", new_password_path(:user) %>
                            </div>
                        </div>
                        <div class="col-md-4"></div>
                        <%= f.submit "Log in", :class => "btn btn-primary", :id => "login_toggle" %>
                        <button type="button" class="btn btn-success" id="register_toggle">Create New Account</button>

                        </div>

                    <% end %>
                    </div>

            <div id="form_register">
                <%= form_for(:user, :url => registration_path(:user)) do |f| %>
                    <div class="row">
                        <div class="col-md-2"></div>
                        <div class="form-group col-md-8">
                            <%= f.email_field :email, autofocus: true, :class => "form-control", :placeholder => "Enter Email-id" %>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-2"></div>
                        <div class="form-group col-md-8">
                            <%= f.password_field :password, autocomplete: "off", :class => "form-control", :placeholder => "Enter Password" %>
                        </div>

                    </div>
                    <div class="row">
                        <div class="col-md-2">
                        </div>
                        <div class="form-group col-md-8">
                            <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control", :placeholder => "Confirm Password" %>
                        </div>

                    </div>


                    <div class="row">
                        <div class="col-md-4"></div>
                        <%= f.submit "Create New Account", :class => "btn btn-success" %>

                        <button type="button" class="btn btn-primary" id="login_toggle1">Login</button>
                    </div>
                <% end %>
            </div>

        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('#login_toggle1').click(function () {
            $('#form_login').show();
            $('#form_register').hide();
        })
        $('#register_toggle').click(function () {
            $('#form_login').hide();
            $('#form_register').show();
        })
    });

</script>





<!--Header Part Ends-->
