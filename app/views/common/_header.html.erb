                    <% else %>
                        <ul class="nav navbar-nav navbar-right">

                            <li>
                                <a href="#" data-toggle="modal" data-target="#myModal">Login/Signup&nbsp;&nbsp;<span class="fa fa-unlock-alt"></span>
