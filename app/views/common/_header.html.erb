</header>

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content" style="padding-bottom:20px;">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h3 class="modal-title" id="myModalLabel">Login or Sign-Up</h3>
            </div>

            <div class="modal-body">


                <div class="login_margin1">
                    <p><b>Sign-in Now! for Emangu</b>,</p>
                </div>

                <div class="login_margin_socialmedia">
                    <p>
                        <%= link_to user_omniauth_authorize_path(:facebook) do %>
                            <button class="btn-facebook">  <i class="fa fa-facebook"></i> | Facebook</button>
                        <% end %>

                        <button class="btn-twitter"><i class="fa fa-twitter"></i> | Twitter</button>
                        <button class="btn-google-plus"><i class="fa fa-google-plus"></i> | Google +</button>
                        <br></p>
                </div>

                <div class="login_margin2">
                    it's free and always will be..</p>

                </div>

                <div id="form_login">
                    <%= form_for(:user, :url => session_path(:user)) do |f| %>
                        <div class="row">
                            <div class="col-md-2"></div>
                            <div class="form-group col-md-8">
                                <div class="input-group margin-bottom-sm">
                                    <span class="input-group-addon"><i class="fa fa-envelope-o fa-fw"></i></span>
                                    <%= f.email_field :email, autofocus: true, :class => "form-control", :required => true, :placeholder => "Enter Email-id" %>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-2"></div>
                            <div class="form-group col-md-8">
                                <div class="input-group margin-bottom-sm">
                                    <span class="input-group-addon"><i class="fa fa-key fa-fw"></i></span>
                                    <%= f.password_field :password, autocomplete: "off", :class => "form-control", :required => true, :placeholder => "Enter Your Password" %>
                                </div>
                            </div>
                        </div>
                        <div class="row form_margin">
                            <div class="form-group col-md-9">
                                <%= f.check_box :remember_me %>
                                <%= f.label :remember_me %>
                                <label>&nbsp;&nbsp;&nbsp;</label>
                                <%= link_to "Forgot your password?", new_password_path(:user) %>
                            </div>
                        </div>
                        <div class="col-md-4"></div>
                        <%= f.submit "Log in", :class => "btn btn-primary", :id => "login_toggle" %>
                        <button type="button" class="btn btn-success" id="register_toggle">Create New Account</button>

                        </div>

                    <% end %>
                    </div>

            <div id="form_register">
                <%= form_for(:user, :url => registration_path(:user)) do |f| %>
                    <div class="row">
                        <div class="col-md-2"></div>
                        <div class="form-group col-md-8">


                            <div class="input-group margin-bottom-sm">
                                <span class="input-group-addon"><i class="fa fa-envelope-o fa-fw"></i></span>
                                <%= f.email_field :email, autofocus: true, :required=>true, :class => "form-control", :placeholder => "Enter Email-id" %>
                            </div>

                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-2"></div>
                        <div class="form-group col-md-8">


                   <div class="input-group margin-bottom-sm">
                                <span class="input-group-addon"><i class="fa fa-key fa-fw"></i></span>
                                <%= f.password_field :password, autocomplete: "off",:required=>true, :class => "form-control", :placeholder => "Enter Password" %>
                            </div>

                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-2">
                        </div>
                        <div class="form-group col-md-8">

                            <div class="input-group margin-bottom-sm">
                                <span class="input-group-addon"><i class="fa fa-key fa-fw"></i></span>
                                <%= f.password_field :password_confirmation, autocomplete: "off", :required=>true, :class => "form-control", :placeholder => "Confirm Password" %>
                            </div>

                        </div>
                    </div>


                    <div class="row">
                        <div class="col-md-4"></div>
                        <%= f.submit "Create New Account", :class => "btn btn-success" %>

                        <button type="button" class="btn btn-primary" id="login_toggle1">Login</button>
                    </div>
                <% end %>
            </div>

        </div>


    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('#login_toggle1').click(function () {
            $('#form_login').show();
            $('#form_register').hide();
        })
        $('#register_toggle').click(function () {
            $('#form_login').hide();
            $('#form_register').show();
        })
    });

</script>


<!--Header Part Ends-->
