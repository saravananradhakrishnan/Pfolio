<div class="container">
    <p id="notice"><%= notice %></p>

    <div class="jumbotron">
        <h1> <%= @post.title %></h1>
        </br>
        <p> <%= @post.body %></p>

        <p>
            <strong>Published at:</strong>
            <%= @post.published_at %>
        </p>

        <p>
            <strong>Posted By:</strong>
            <%= which_user(@post.user_id).email %>
        </p>
        <%= link_to 'Edit', edit_post_path(@post) %> |
        <%= link_to 'Back', posts_path %>
    </div>
    <h2>Comments</h2>
    <%= render @post.comments %>

    <%= render 'comments/form' %>
</div>

