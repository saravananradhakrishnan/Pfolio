<div class="row">
    <div class="col-md-8 bg-info">
        <h1>
            Blog Post
        </h1>
        <%= form_for(@post) do |f| %>
            <% if @post.errors.any? %>
                <div id="error_explanation">
                    <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

                    <ul>
                        <% @post.errors.full_messages.each do |message| %>
                            <li><%= message %></li>
                        <% end %>
                    </ul>
                </div>
            <% end %>
            <%= f.hidden_field :user_id, :value => current_user.id %>
            <%= f.hidden_field :is_published, :value=>true %>
            <div class="input-group">
                <span class="input-group-addon"><%= f.label :title %> </span>

                <%= f.text_field :title, :placeholder => "Title minimum 5 character", :class => "form-control", :required => true %>
            </div>
            <br/>

            <div class="input-group">
                <span class="input-group-addon"> <%= f.label :body %></span>
                <%= f.cktext_area :body, :as => :ckeditor, :class => "form-control", :rows => "9", :require => true %>
            </div>

            <div class="input-group">
                <span class="input-group-addon"><%= f.label :published_at %></span>

                <%= f.datetime_select :published_at %>
            </div>
            </br>
            <%= f.submit "Post", :class => "btn btn-primary pull-right", :style => "width:150px" %>
            <%= link_to 'Back', posts_path, :class => "btn btn-info", :style => "width:150px" %>
            <br/><br/>
        <% end %>
    </div>

    <%= render 'right_pannel' %>
</div>
