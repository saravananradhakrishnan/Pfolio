<%= form_for(@post) do |f| %>
    <% if @post.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

            <ul>
                <% @post.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>
    <%#= f.hidden_field :user_id, :value => current_user.id %>

    <div class="form-group">
        <%= f.label :title %><br>
        <%= f.text_field :title, :placeholder => "Enter email", :class => "form-control" %>
    </div>
    <div class="form-group">
        <%= f.label :body %><br>
        <%= f.text_area :body, :placeholder => "Blog Content", :class => "form-control", :rows => "3" %>
    </div>
    <div class="form-group">
        <%= f.label :published_at %><br>
        <%= f.datetime_select :published_at %>
    </div>
    <div class="form-group">
        <%= f.label :is_published %><br>
        <%= f.check_box :is_published %>
    </div>
    <div class="form-group">
        <%= f.submit "Post", :class=>"btn btn-primary" %>
        <%= link_to 'Back', posts_path, :class=>"btn btn-info" %>
    </div>
<% end %>
