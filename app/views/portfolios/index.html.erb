<h1>Listing portfolios</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Work</th>

       <th>Actions</th>

    </tr>
  </thead>

  <tbody>

        <% @portfolios.each do |portfolio| %>
         <% if portfolio.user_id == current_user.id%>

      <tr>
        <td><%= portfolio.title %></td>
        <td><%= portfolio.description %></td>
        <td><%= portfolio.work %></td>
       <td> <%= link_to 'Show', portfolio %>
        <%= link_to 'Edit', edit_portfolio_path(portfolio) %>
        <%= link_to 'Destroy', portfolio, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
     <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Portfolio', new_portfolio_path %>
